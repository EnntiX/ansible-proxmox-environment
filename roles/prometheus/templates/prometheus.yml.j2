# Prometheus configuration
global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:

  # Prometheus self-monitoring
  - job_name: 'prometheus'
    static_configs:
      - targets:
        - localhost:9090

  # Node Exporter on all managed hosts
  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for host in groups['all'] %}
        - {{ hostvars[host].ansible_host }}:9100
{% endfor %}

